doctype html
html
  head
    title Đăng ký
    link(rel="stylesheet" href="/css/register.css") 
  body
    .register-container
      .register-card
        .register-header
          h2 Đăng ký
        .register-body
          form(action="/user/register" method="POST")
            .form-group
              label(for="username") Tên người dùng
              input#username.form-control(type="text" name="username" required)
            .form-group
              label(for="email") Email
              input#email.form-control(type="email" name="email" required)
              if(error)
                p.text-error #{error}
            .form-group
              label(for="password") Mật khẩu
              input#password.form-control(type="password" name="password" required)
            .form-group
              label(for="confirmPassword") Xác nhận mật khẩu
              input#confirmPassword.form-control(type="password" name="confirmPassword" required)
            .form-group.text-center
              button.btn.btn-primary(type="submit") Đăng ký