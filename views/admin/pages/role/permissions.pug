extends ../../layouts/default.pug

block main
 div(class="text-right")
  button(type="submit", class="btn btn-primary mb-3", button-submit) Cập nhật
 table(class="table table-hover")
  thead 
    tr
      th Tính năng 
      each item in records
       th(class="text-center" _id=item.id ) #{item.title} 
  tbody 
   tr(data-name="rolelistproduct")
    td Danh sách sản phẩm 
    each item in records
     td(class="text-center")
       input(type="checkbox" class="permission-checkbox" checked=item.rolelistproduct) 
    tr(data-name="rolecategoryproduct")
     td Danh mục sản phẩm
     each item in records
      td(class="text-center")
       input(type="checkbox" class="permission-checkbox" checked=item.rolecategoryproduct) 
    tr(data-name="rolelistrole")
     td Nhóm quyền
     each item in records
      td(class="text-center")
       input(type="checkbox" class="permission-checkbox" checked=item.rolelistrole)
    tr(data-name="rolelistpermission")
     td Phân quyền
     each item in records
      td(class="text-center")
       input(type="checkbox" class="permission-checkbox" checked=item.rolelistpermission)
    tr(data-name="rolepermission")
     td Danh sách tài khoản
     each item in records
      td(class="text-center")
       input(type="checkbox" class="permission-checkbox" checked=item.rolepermission)
  form(action="/admin/role/permissions?_method=PATCH", method="post", form-role)
    div(class="form-group")
      input(type="text", class="form-control d-none", name="permissions" )
  script(src="/admin/js/role.js")

