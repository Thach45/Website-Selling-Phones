extends ../../layouts/default.pug
include ../../mixins/filters.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/alert.pug

block main 
     h1 Các poster khuyến mãi
     .card.mb-3
            .card-body  
                .row   
                    .col-8
                    .col-4
                        a(
                            href="discount/create"
                            class="btn btn-outline-success"
                        ) + Thêm mới
     table(
            class="table table-hover table-sm"
            checkbox-multi
     ) 
        thead 
            th STT
            th Hình ảnh 
            th Ngày tạo
            th Hành động

        tbody 
          each item, index in discounts
            tr 
                td #{index+1}
                td 
                    img(src = item.thumbnail, height="auto", width="100px")
                td #{item.created}
                td 
                    form(action=`/admin/news/discount/delete/${item._id}`, method="post")
                        button(
                            type="submit",
                            class="btn btn-danger btn-sn ml-2",
                            data-id=item.id
                        ) Xoá

                        