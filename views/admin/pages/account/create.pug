extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select.pug

block main 
    +alert-error(2000)
    h1(class="mb-4") Thêm mới sản phẩm 
    form(
        action="create",
        method="post"
        id="form-create-product"
        enctype="multipart/form-data"
    ) 
        div(class="form-group")
            label(for="title") Tên tài khoản*
            input(type="text", class="form-control", id="title", name="username", required)
        div(class="form-group")
            label(for="desc") Mật khẩu*
            input(name="password", row="5", class="form-control", id="desc", required)
        div(class="form-group")
            label(for="desc") Email*
            input(name="email", row="5", class="form-control", id="desc")
        div(class="form-group")
            label(for="desc") Số điện thoại*
            input(name="phone", row="5", class="form-control", id="desc")
        div(class="form-group")
            label(for="parent_id") Nhóm quyền
            select(name="role_id",id="role_id",class="form-control")
                option(value="") --Chọn nhóm quyền-- 
                each role in roles
                    option(value=role._id) #{role.title}
        div(class="form-group", upload-img)
            label(for="thumbnail") Ảnh 
            input(type="file", upload-img-input ,class="form-control-file", id="thumbnail", name="avatar", accept="image/*") 
            img(src="", input-img-preview)
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked  
            )
            label(for="statusActive", class="form-check-label") Hoạt động 
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInactive"
                name="status"
                value="active"
                checked  
            )
            label(for="statusInactive", class="form-check-label") Không hoạt động   
    
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Tạo mới
    srcipt(link="/admin/js/script.js")
